# Production Environment Configuration - Port 8080 with DNS
# This file contains all environment variables for production deployment on port 8080

# API Base URLs - Production (Backend stays on localhost, only frontend uses DNS)
REACT_APP_API_BASE_URL=http://localhost:8002
REACT_APP_RECOMMENDATION_API_BASE_URL=http://localhost:8010
REACT_APP_THEME_API_BASE_URL=http://localhost:8020
REACT_APP_STRATEGIES_API_BASE_URL=http://localhost:8030

# Production Server Configuration - Port 8080 with DNS
REACT_APP_PROD_SERVER_PORT=8080
REACT_APP_PROD_SERVER_HOST=algodiscovery.prod

# Service Ports - Production (Internal)
REACT_APP_ALGORITHM_API_PORT=8013
REACT_APP_CHARTINK_API_PORT=8001
REACT_APP_SWING_API_PORT=8002
REACT_APP_LONGTERM_API_PORT=8001
REACT_APP_UNIFIED_STRATEGY_API_PORT=8002
REACT_APP_STOCK_CANDIDATE_POPULATOR_API_PORT=8018
REACT_APP_ZERODHA_API_PORT=8013

# Proxy Configuration - Production
REACT_APP_PROXY_TARGET=http://127.0.0.1:8893

# Request Configuration - Production (Robust)
REACT_APP_REQUEST_TIMEOUT=45000
REACT_APP_REQUEST_RETRY_ATTEMPTS=3
REACT_APP_REQUEST_RETRY_DELAY=1500

# Refresh Intervals - Production (Balanced)
REACT_APP_REFRESH_RECOMMENDATIONS=180000
REACT_APP_REFRESH_PRICES=8000
REACT_APP_REFRESH_MIN_INTERVAL=3000
REACT_APP_REFRESH_DEFAULT=45000
REACT_APP_REFRESH_LONG_TERM=240000
REACT_APP_REFRESH_SHORT_TERM=45000

# WebSocket Configuration
REACT_APP_KITE_MAX_SUBSCRIPTIONS=3000
REACT_APP_KITE_HEARTBEAT_INTERVAL=30000

# UI Configuration
REACT_APP_AUTO_HIDE_DURATION=4000
REACT_APP_SAVE_STATUS_TIMEOUT=4000

# Chartink Configuration
REACT_APP_CHARTINK_BASE_URL=https://chartink.com
REACT_APP_CHARTINK_STOCKS_URL=https://chartink.com/stocks-new

# Zerodha Configuration
REACT_APP_ZERODHA_CHART_BASE_URL=https://kite.zerodha.com/chart/ext/tvc/NSE
REACT_APP_ZERODHA_CHART_THEME=dark

# Production Configuration - Port 8080
REACT_APP_NODE_ENV=production
REACT_APP_LOG_LEVEL=warn
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_MOCK_DATA=false

# Kite API Configuration (for production)
REACT_APP_KITE_API_KEY=your_prod_api_key_here
REACT_APP_KITE_ACCESS_TOKEN=your_prod_access_token_here

# Production Features - Port 8080
REACT_APP_ENABLE_HOT_RELOAD=false
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_ENABLE_COMPRESSION=true
REACT_APP_ENABLE_CACHING=true
