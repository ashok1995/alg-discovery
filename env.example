# Backend API Configuration
# Copy this file to .env and update the values as needed

# Application Settings
APP_NAME="Automated Trading Backend API"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# Server Settings
HOST="0.0.0.0"
PORT=8888
RELOAD=true
WORKERS=1

# CORS Settings (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8501,http://127.0.0.1:3000,http://127.0.0.1:8501"

# API Keys (Get these from respective providers)
ALPHA_VANTAGE_API_KEY=""
CHARTINK_API_KEY=""
ZERODHA_API_KEY=""
ZERODHA_API_SECRET=""

# Database Configuration
DATABASE_URL="sqlite:///./trading_data.db"
REDIS_URL="redis://localhost:6379/0"

# Cache Settings
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE=1000

# Trading Configuration (comma-separated symbols)
DEFAULT_SYMBOLS="TCS.NS,INFY.NS,RELIANCE.NS,HDFCBANK.NS,ICICIBANK.NS,WIPRO.NS,LT.NS,SBIN.NS,ITC.NS,HINDUNILVR.NS"

# Risk Management
MAX_POSITION_SIZE=100000.0
MAX_DAILY_LOSS=50000.0
MAX_PORTFOLIO_RISK=0.05

# Background Job Intervals (seconds)
DATA_FETCH_INTERVAL=30
SIGNAL_GENERATION_INTERVAL=60
MARKET_STATUS_INTERVAL=300
CACHE_CLEANUP_INTERVAL=1800
HEALTH_CHECK_INTERVAL=600

# Rate Limiting (requests per minute)
API_RATE_LIMIT=100
DATA_SOURCE_RATE_LIMIT=60

# WebSocket Settings
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=10
MAX_WEBSOCKET_CONNECTIONS=100

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FILE="./logs/backend_api.log"

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Paths
DATA_DIRECTORY="./data"
LOGS_DIRECTORY="./logs"

# SSL Configuration (optional)
# SSL_KEYFILE=""
# SSL_CERTFILE="" 