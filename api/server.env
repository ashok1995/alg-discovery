# Algorithm Discovery Server Configuration
# ===========================================

# Server Ports
SWING_PORT=8002
SHORTTERM_PORT=8003
LONGTERM_PORT=8001

# Server Host (usually localhost for development, 0.0.0.0 for production)
HOST=localhost

# Production Host (uncomment for production deployment)
# HOST=0.0.0.0

# API Configuration
CHARTINK_API_BASE_URL=https://chartink.com
API_TIMEOUT=30
MAX_RETRIES=3

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=standard

# Performance Settings
REQUEST_TIMEOUT=60
WORKER_TIMEOUT=120
KEEP_ALIVE=2

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
CHARTINK_DELAY_SECONDS=0.5

# Cache Settings
CACHE_TTL_MINUTES=15
ENABLE_CACHE=true

# Database Settings (if applicable)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=algorithm_discovery
# DB_USER=api_user
# DB_PASSWORD=secure_password

# Security Settings
API_KEY_REQUIRED=false
# API_KEY=your_secure_api_key_here

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
ENABLE_HEALTH_CHECKS=true

# Process Management
PID_DIR=./pids
LOG_DIR=./logs

# Development vs Production
ENVIRONMENT=development
DEBUG=true

# Server Auto-restart Settings
AUTO_RESTART=true
MAX_RESTART_ATTEMPTS=3
RESTART_DELAY_SECONDS=5

# Resource Limits
MAX_MEMORY_MB=1024
MAX_CPU_PERCENT=80

# Backup and Monitoring
ENABLE_MONITORING=true
BACKUP_LOGS=true
LOG_ROTATION_DAYS=7 